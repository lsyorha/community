<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nowcoder.demo1.dao.DiscussPostMapper">
<!--查询域-->
    <sql id="selectFields">
        id, user_id, title, content, type, status, create_time, comment_count, score
    </sql>
<!--    插入域-->
    <sql id="insertFields">
        user_id, title, content, type, status, create_time, comment_count, score
    </sql>

    <select id="selectDiscussPosts" resultType="DiscussPost">
        select <include refid="selectFields"/>
        from community.discuss_post
        <where>
            status != 2
            <if test="userId!=0">
               and user_id = #{userId}
            </if>
        </where>
        order by type desc, create_time desc
        limit #{offset},#{limit}
    </select>

    <select id="selectDiscussPostRows" resultType="int">
        select count(id)
        from community.discuss_post
        <where>
            status != 2
            <if test="userId!=0">
                and user_id = #{userId}
            </if>
        </where>
    </select>
<!--发布帖子,parameterType可简单直接的实现参数类型的指定和映射-->
    <insert id="addDiscussPost" parameterType="DiscussPost">
        insert into community.discuss_post(<include refid="insertFields"/>)
        values(#{userId},#{title},#{content},#{type},#{status},#{createTime},#{commentCount},#{score})
    </insert>

    <select id="selectDiscussPost" resultType="DiscussPost">
    select <include refid="selectFields"/>
        from community.discuss_post where id = #{id}
    </select>
</mapper>